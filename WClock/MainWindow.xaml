                        <Storyboard  >
                            <DoubleAnimation Storyboard.TargetName="OptionsBorder" 
                                             Duration="0:0:0:0.20"
                                             Storyboard.TargetProperty="Width"
                                             To="600"
                                             AutoReverse="False"/>
                            <DoubleAnimation Storyboard.TargetName="OptionsBorder"    
                                             Duration="0:0:0:0.20"
                                             Storyboard.TargetProperty="Height"
                                             To="600"
                                             AutoReverse="False"/>
                            <ThicknessAnimation Storyboard.TargetName="OptionsBorder"
                                             Duration="0:0:0:0.20"
                                             Storyboard.TargetProperty="Margin"                                     
                                             To="0,0,0,0"
                                             AutoReverse="False"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

            </Button.Triggers>
        </Button>
    </Grid>

</Window>
